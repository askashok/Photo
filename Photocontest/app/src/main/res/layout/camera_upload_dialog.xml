<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#409FBC"
    android:layout_gravity="center">



        <LinearLayout
            android:layout_width="@dimen/imagewidth"
            android:layout_height="@dimen/imagewidth"
            android:orientation="horizontal">

            <ImageView


                android:id="@+id/vote_snap_img"
                android:layout_width="@dimen/imagewidth"
                android:layout_height="@dimen/imagewidth"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/marginleft_camare"
                android:src="@drawable/ic_launcher" />


            </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/imagewidth"
            android:layout_height="@dimen/imagewidth"
            android:layout_marginLeft="@dimen/marginleft_camare"
            android:orientation="vertical">

            <EditText
                android:layout_marginTop="@dimen/top"
                android:id="@+id/title_upload_edt"
                android:layout_width="@dimen/imagewidth"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_corner"
                android:hint="Title"
                android:textSize="@dimen/medium"
                android:textColor="#ffffff"
                android:textColorHint="#C5FFFC"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"

                android:textCursorDrawable="@null"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:padding="@dimen/marginfield" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top"
                android:background="@drawable/rectangle_white_corner"
                >

                <AutoCompleteTextView
                    android:focusableInTouchMode="true"
                    android:id="@+id/selectarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium"
                    android:textColorHint="#C5FFFC"
                    android:hint="Select Your Area"
                    android:padding="@dimen/marginfield"

                    />

                <ImageView
                    android:id="@+id/location_img"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/rectangle_white_corner"
                android:layout_marginTop="@dimen/top">


                <EditText
                    android:focusableInTouchMode="true"
                    android:id="@+id/shor_desctiption_edt"
                    style="@style/CustomRatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Short Description"
                    android:textColor="#ffffff"
                    android:textCursorDrawable="@null"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_centerInParent="true"
                    android:imeOptions="actionDone"
                    android:textColorHint="#C5FFFC"
                    android:singleLine="true"
                    android:textSize="@dimen/medium"
                    android:padding="@dimen/marginfield"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/upload_img_server_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top"
                android:background="#ffffff"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/padding_title"
                android:paddingRight="@dimen/padding_title"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Submit"
                android:textColor="#409FBC"
                android:textSize="@dimen/medium" />

        </LinearLayout>





</LinearLayout>