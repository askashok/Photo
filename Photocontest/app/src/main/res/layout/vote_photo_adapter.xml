<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/vote_photo_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/CustomRatingBar"
            android:isIndicator="true"
            android:numStars="5"
            />



        <ImageView
            android:id="@+id/all_image_adapter"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:paddingLeft="@dimen/image_margin_top"
            android:paddingTop="5dp"
            android:paddingRight="@dimen/image_margin_top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"

            android:textSize="@dimen/medium"
            android:textColor="#409FBC"
            android:id="@+id/title_id"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  01-12-2015"
                android:textSize="@dimen/small"
                android:layout_toRightOf="@+id/date_textid"
                android:id="@+id/date_id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spam"
                android:id="@+id/spam_id"
                android:background="#409FBC"
                android:textColor="#ffffff"
                android:padding="1dp"
                android:textSize="@dimen/small"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/date_id"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Time :"
                android:textStyle="bold"
                android:id="@+id/time_text"
                android:textSize="@dimen/small"
                />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   15:21:22"
                android:textSize="@dimen/small"
                android:id="@+id/time_id"
                android:layout_toRightOf="@+id/time_text"
               />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:textColor="#FF7300"
                android:id="@+id/reting_id"
                android:textSize="@dimen/small"
               android:layout_toRightOf="@+id/time_id"
android:layout_marginLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_text"
                android:layout_marginLeft="2dp"
                android:text="1"
                android:textSize="@dimen/small"
                android:layout_toRightOf="@+id/reting_id"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>



