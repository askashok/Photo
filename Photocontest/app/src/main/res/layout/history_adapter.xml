<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/vote_photo_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">




        <ImageView
            android:id="@+id/all_image_adapter"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date   :"
                android:textStyle="bold"
                android:textSize="@dimen/small"
                android:id="@+id/date_textid"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  01-12-2015"
                android:textSize="@dimen/small"
                android:layout_toRightOf="@+id/date_textid"
                android:id="@+id/date_id"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Time  :"
                android:textStyle="bold"
                android:id="@+id/time_text"
                android:textSize="@dimen/small"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   15:21:22"
                android:textSize="@dimen/small"
                android:id="@+id/time_id"
                android:layout_toRightOf="@+id/time_text"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Votes :"
                android:textStyle="bold"
                android:id="@+id/no_of_vote"
                android:textSize="@dimen/small"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   15"
                android:textSize="@dimen/small"
                android:id="@+id/no_vote"
                android:layout_toRightOf="@+id/no_of_vote"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:textColor="#FF7300"
                android:id="@+id/reting_id"
                android:textSize="@dimen/small"
                android:layout_alignParentLeft="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_text"
                android:layout_marginLeft="2dp"
                android:text="1"
                android:textSize="@dimen/small"
                android:layout_toRightOf="@+id/reting_id"/>


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
