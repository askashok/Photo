<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:background="#2b2b2b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/title_image_hi"
            android:layout_height="@dimen/title_image_hi"
            android:id="@+id/image"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo"
            android:padding="@dimen/title_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Menu"
            android:textColor="#ffffff"
            android:textSize="@dimen/big" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainimageheight"
        >

        <ImageView
            android:id="@+id/slidingimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainimageheight"
            android:scaleType="centerCrop"

            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_ball_width"

        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_one"
            android:layout_width="@dimen/smallballs_menu"
            android:layout_height="@dimen/smallballs_menu"
            />

        <ImageView
            android:id="@+id/image_two"
            android:layout_width="@dimen/smallballs_menu"
            android:layout_height="@dimen/smallballs_menu"
            android:layout_marginLeft="@dimen/marginleft"
            />

        <ImageView
            android:id="@+id/image_three"
            android:layout_width="@dimen/smallballs_menu"
            android:layout_height="@dimen/smallballs_menu"
            android:layout_marginLeft="@dimen/marginleft"
            />

        <ImageView
            android:id="@+id/image_four"
            android:layout_width="@dimen/smallballs_menu"
            android:layout_height="@dimen/smallballs_menu"
            android:layout_marginLeft="@dimen/marginleft"
            />

        <ImageView
            android:id="@+id/image_five"
            android:layout_width="@dimen/smallballs_menu"
            android:layout_height="@dimen/smallballs_menu"
            android:layout_marginLeft="@dimen/marginleft"
            />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">





               <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_menus">



            <LinearLayout
                android:id="@+id/myclick_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/myclick_img"
                        android:layout_width="@dimen/menuimage_width"
                        android:layout_height="@dimen/menuimage_width"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_launcher" />

                       <TextView
                           android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marginfield"
                        android:text="My Click"
                           android:textSize="@dimen/small"
                           android:layout_centerHorizontal="true"
                           android:layout_below="@+id/myclick_img"
                        android:textColor="#409fbc"/>
                </RelativeLayout>

                </LinearLayout>


                   <LinearLayout
                       android:id="@+id/vote_phot_btn"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:orientation="vertical">

                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           >

                           <ImageView
                               android:id="@+id/vote_photo_img"
                               android:layout_width="@dimen/menuimage_width"
                               android:layout_height="@dimen/menuimage_width"
                               android:layout_centerHorizontal="true"
                               android:src="@drawable/ic_launcher" />

                           <TextView

                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/marginfield"
                               android:text="Vote Photos"
                               android:textSize="@dimen/small"
                               android:gravity="center_horizontal"
                               android:layout_centerHorizontal="true"
                               android:layout_below="@+id/vote_photo_img"
                               android:textColor="#409fbc"/>
                       </RelativeLayout>

                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/top10_btn"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:orientation="vertical">

                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           >

                           <ImageView
                               android:id="@+id/top10img_img"
                               android:layout_width="@dimen/menuimage_width"
                               android:layout_height="@dimen/menuimage_width"
                               android:layout_centerHorizontal="true"
                               android:src="@drawable/ic_launcher" />

                           <TextView

                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/marginfield"
                               android:text="Top 10 Images"
                               android:textSize="@dimen/small"
                               android:gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                               android:layout_below="@+id/top10img_img"
                               android:textColor="#409fbc"/>
                       </RelativeLayout>

                   </LinearLayout>
</LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:padding="@dimen/padding_menus"
                       android:layout_marginTop="5dp"
                       android:weightSum="3">


                       <LinearLayout
                           android:id="@+id/photofday_btn"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical">


                           <ImageView

                               android:id="@+id/photooftoday_img"
                               android:layout_width="@dimen/menuimage_width"
                               android:layout_height="@dimen/menuimage_width"
                               android:src="@drawable/ic_launcher"

                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:layout_marginTop="@dimen/marginfield"
                               android:layout_marginLeft="5dp"
                               android:textSize="@dimen/small"
                               android:text="Photos of the"
                               android:textColor="#409fbc"/>
                          <!-- <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               >-->
                                <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textColor="#409fbc"
                                    android:textSize="@dimen/small"
                                 android:text="Day"/>
                         <!--  </RelativeLayout>-->
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/myranking_btn"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical">

                           <ImageView
                               android:id="@+id/myranking_img"
                               android:layout_width="@dimen/menuimage_width"
                               android:layout_height="@dimen/menuimage_width"
                               android:src="@drawable/ic_launcher"

                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/marginfield"
                               android:text="My Ranking"
                               android:gravity="center"
                               android:textSize="@dimen/small"
                               android:textColor="#409fbc"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#409fbc"
                              android:visibility="invisible"
                               android:text="Day"/>
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/myprofile_layout"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="vertical">

                           <ImageView
                               android:id="@+id/myprofile_img"
                               android:layout_width="@dimen/menuimage_width"
                               android:layout_height="@dimen/menuimage_width"
                               android:src="@drawable/ic_launcher"

                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/marginfield"
                               android:text="My Profile"
                               android:textSize="@dimen/small"
                               android:textColor="#409fbc"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#409fbc"
                               android:visibility="invisible"
                               android:text="Day"/>
                       </LinearLayout>




               </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/settings_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_menus"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/setting_img"
                    android:layout_width="@dimen/menuimage_width"
                    android:layout_height="@dimen/menuimage_width"
                    android:src="@drawable/ic_launcher"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginfield"
                    android:text="Settings"
                    android:textSize="@dimen/small"
                    android:textColor="#409fbc"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/about_img"
                    android:layout_width="@dimen/menuimage_width"
                    android:layout_height="@dimen/menuimage_width"
                    android:src="@drawable/ic_launcher"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginfield"
                    android:text="About"
                    android:textSize="@dimen/small"
                    android:textColor="#409fbc"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logut_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logout_img"
                    android:layout_width="@dimen/menuimage_width"
                    android:layout_height="@dimen/menuimage_width"
                    android:src="@drawable/ic_launcher"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginfield"
                    android:text="Logout"
                    android:textSize="@dimen/small"
                    android:textColor="#409fbc"/>
            </LinearLayout>
            </LinearLayout>


