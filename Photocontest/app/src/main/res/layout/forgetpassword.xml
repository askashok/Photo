<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_screen"
 >

    <LinearLayout
        android:layout_marginTop="@dimen/marginpadding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4D000000"
           android:padding="5dp">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:id="@+id/logo_id"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="#4D000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="@dimen/marginpadding"
        android:layout_marginLeft="@dimen/marginpadding"
        android:orientation="vertical"
        android:padding="5dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView

            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Your Password ?"
            android:textSize="@dimen/medium"
            android:id="@+id/forg_id"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginfield"
            android:padding="@dimen/submit_padding"
            android:textColor="#ffffff"
            android:id="@+id/content_id"
            android:text="If you have forgotten your password its not a problem,enter your email address you signed up with and you we'll send your login information right away"
            android:textSize="@dimen/small" />
            </LinearLayout>
        </ScrollView>
  </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <LinearLayout
            android:background="#4D000000"
            android:layout_marginTop="@dimen/emailaddresspadding"
            android:layout_marginRight="@dimen/marginpadding"
            android:layout_marginLeft="@dimen/marginpadding"
            android:id="@+id/linear_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="@dimen/submit_padding">

            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_id"
                android:text="Enter Your Email Address :"
                android:textSize="@dimen/medium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginfield"
                android:background="#ffffff"
                android:layout_marginLeft="@dimen/forget_edt_text">

                <EditText
                    android:id="@+id/forget_mailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/small"
                    android:padding="@dimen/forgot_psw_edit"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/forgot_psw_submit"

            android:layout_marginTop="@dimen/marginpadding"
            android:background="#4D000000"
            android:layout_marginRight="@dimen/marginpadding"
            android:layout_marginLeft="@dimen/marginpadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/submit_padding"
            android:orientation="vertical"
            android:id="@+id/submit_email">

            <TextView
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/submit"
                android:textSize="@dimen/medium"
                android:id="@+id/submit_text"/>
        </LinearLayout>

    </RelativeLayout>

