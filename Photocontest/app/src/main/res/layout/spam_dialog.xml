<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/editmargin"
    android:background="#359EB9">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/big"
        android:text="Is this photo really spam?"/>
    <EditText
        android:layout_marginTop="@dimen/marginfield"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/marginpadding"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cancel"
                android:padding="@dimen/marginfield"
                android:gravity="center_horizontal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Send"
                android:layout_centerInParent="true"
                android:padding="@dimen/marginfield"
                android:gravity="center_horizontal"
                android:background="#ffffff"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
